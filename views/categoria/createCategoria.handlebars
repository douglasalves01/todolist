<div class="categoria-container">
  <div class="header-categoria">
    <h1>Lista Categoria</h1>
    <form action="/categoria" method="POST" id="nova-categoria-form">
      <input
        type="text"
        name="categoria"
        id="nova-categoria-input"
        placeholder="Insira a categoria"
        required
      />
      <input type="submit" id="nova-categoria-submit" value="Add categoria" />
    </form>
  </div>
  <div class="main">
    <section class="lista-categoria">
      <h2>Categorias</h2>

      <div id="categorias">
        {{#each categorias}}
          <div class="categoria">
            <div class="content">
              <input
                type="text"
                name="descricao"
                class="text"
                value={{this.descricao}}
              />
            </div>
            <div class="actions">
              <form action="/categoria/{{this.idCategoria}}" method="POST">
                <button class="editar">Editar</button>
              </form>
              <form
                action="/deleteCategoria/{{this.idCategoria}}"
                method="POST"
              >
                <button class="excluir">Excluir</button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>

    </section>
  </div>

</div>